<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <!-- Application Animation Theme -->
    <style name="AppAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/BadgerPoint.Window</item>
    </style>

    <!-- Application Animations -->
    <style name="BadgerPoint.Window" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Text Styles -->
    <style name="txtNavDrawerItem">
        <item name="android:textSize">@dimen/text_size_navigation_menu</item>
        <item name="android:textColor">@color/navigation_txt</item>
        <item name="font_path_from_assets">@string/font_bold</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
